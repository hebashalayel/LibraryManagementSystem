<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AllBooksInSystemController">
   <children>
      <VBox prefHeight="720.0" prefWidth="1022.0" style="-fx-border-color: white;">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="79.0" prefWidth="362.0" spacing="10.0">
               <children>
                  <TextField fx:id="searchtxtfield" prefHeight="26.0" prefWidth="222.0" promptText="Search Book" />
                  <Button fx:id="clearBtn" mnemonicParsing="false" onAction="#Clear" prefHeight="30.0" prefWidth="96.0" style="-fx-background-color: #1d7899;" text="Clear" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <TableView fx:id="tableViewBooks" prefHeight="620.0" prefWidth="200.0">
               <columns>
                  <TableColumn fx:id="titleCol" prefWidth="123.0" text="Title" />
                  <TableColumn fx:id="autherCol" prefWidth="123.0" text="Author" />
                  <TableColumn fx:id="categoryCol" prefWidth="123.0" text="Category" />
                  <TableColumn fx:id="isbnCol" prefWidth="123.0" text="Isbn" />
                  <TableColumn fx:id="languageCol" prefWidth="123.0" text="Language" />
                  <TableColumn fx:id="copyCountCol" prefWidth="123.0" text="Copy Count" />
                  <TableColumn fx:id="pageCountCol" prefWidth="123.0" text="Page Count" />
                  <TableColumn fx:id="ivColBook" prefWidth="123.0" text="Book Image" />
               </columns>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </TableView>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
